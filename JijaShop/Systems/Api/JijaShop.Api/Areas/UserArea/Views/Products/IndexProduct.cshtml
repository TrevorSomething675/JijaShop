@using JijaShop.Api.Data.Models.DTOModels;
@model ProductDto

<div class="d-flex">
	<div class="px-4">
		<a asp-controller="Products" asp-action="Index" class="return-back-btn">
			<i class="bi bi-arrow-left-circle"></i>
		</a>
	</div>
	
	<div class="container py-3">
		<div class="product-big-bg">
			<div class="row">
	
				<div class="col">
					<img src="@Model.ProductImageDto.ImagePathDto"/>
				</div>
	
				<div class="col" style="overflow:hidden">
					<div class="d-flex flex-column justify-content-between h-100">
	
						<div>
							<h2 class="text-center">@Model.Name</h2>
						</div>
	
						<div class="p-2 flex-grow-1">
							<p class="px-2" style="word-wrap: break-word;">
								@Model.ProductDetailsDto.Description
						   </p>
						</div>
	
						<div class="d-flex justify-content-between">
							<div>
								@Model.ProductDetailsDto.Price
							</div>
						</div>
	
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

