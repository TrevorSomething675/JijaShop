@using JijaShop.Api.ViewModels;

@model ProductsViewModel
@{
    ViewData["title"] = "Список товаров";
}

<section>
    <div class="container-fluid pt-4">
        <div class="row">
            <div class="col col-lg-9">
                <div id="ProductsContainer" class="row mx-2">
                    @await Html.PartialAsync("IndexProductsPartial", Model?.Products)
                </div>
                
                <div class="d-flex justify-content-center pb-3">
                    <button id="GetMoreUsers" class="text-body-download p-2">Загрузить ещё</button>
                </div>
            </div>

            <div class="col-3 d-lg-block d-none">
                <div class="row mx-3 sticky-top">
                    @await Html.PartialAsync("IndexCategoryFilterPartial")
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $('#GetMoreUsers').click(function () {
                $.ajax({
                    url: '@Url.Action("IndexProductsPartial", "Products")',
                    type: 'GET',
                    success: function (result) {
                        $('#ProductsContainer').html(result);
                    },
                    error: function () {
                        alert('Error occurred while refreshing products.');
                    }
                });
            });
        });
    </script>
</section>