@using JijaShop.Api.Data.Models.DTOModels;
@model IEnumerable<ProductDto>

@{
    ViewData["title"] = "Список товаров";
}

<section>
    <div class="container-fluid pt-4">
        <div class="row">
            <div class="col col-lg-9">
                <div id="ProductsContainer" class="row mx-2">
                    @await Html.PartialAsync("ProductsPartial/ProductsPartial", Model)
                </div>
                
                <div class="d-flex justify-content-center p`b-3">
                    <button id="GetMoreUsers" class="text-body-download p-2">Загрузить ещё</button>
                </div>
            </div>

            <div class="col-3 d-lg-block d-none">
                <div class="row mx-3 sticky-top">
                    @await Html.PartialAsync("ProductsPartial/ProductSideBarPartial")
                </div>
            </div>
        </div>

        <div>

        </div>
    </div>

     <script>
         $(document).ready(function () {
            $('#GetMoreUsers').click(function () {
                 $.ajax({
                    url: 'Products/ProductsPartial',
                     type: 'GET',
                     success: function (response) {
                        $('#ProductsContainer').append(response);
                     },
                     error: function () {
                         alert('Произошла ошибка при загрузке продуктов.');
                     }
                 });
             });
         });
    </script>
</section>