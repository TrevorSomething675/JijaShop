@using JijaShop.Api.Data.Models.DTOModels;
@model ProductDto

<div class="product-card p-1">
    <div class="product-card-offer">
        @if (Model.ProductOffers.IsHitOffer)
        {
            <div class="offer-hit">Хит</div>
        }
        @if (Model.ProductOffers.IsNewOffer)
        {
            <div class="offer-new">New</div>
        }
    </div>

    <div class="product-img">
        <a asp-area="UserArea" asp-controller="Products" asp-action="Product" asp-route-productName="@Model.Name">
            <img src="@Model.ProductImage.ImagePath" />
        </a>
    </div>

    <div class="product-name">
        <h4>
            <a href="products.html">@Model.Name</a>
        </h4>

        @if (Model.IsFavorite)
        {
            <div>IsFavorite</div>
        }
        else
        {
            <div>NotFavorite</div>
        }

        <p class="product-details-description">@Model.ProductDetails.Description</p>

        <div class="d-flex justify-content-between">
            <div class="product-details-price d-flex justify-content-center py-1">
                @if (Model.ProductDetails.OldPrice != null && Model.ProductDetails.OldPrice != 0)
                {
                    <small class="me-1">@Model.ProductDetails.OldPrice$</small>
                }
                @Model.ProductDetails.Price$
            </div>

            <div class="product-links">
                <a href="javascript:void(0);" onclick="addToFavorite('@Model.Name')" class="btn btn-outline-secondary add-to-cart"><i class="bi bi-star-fill"></i></a>
                <a href="#" class="btn btn-outline-secondary add-to-favorites"><i class="bi bi-bag-check-fill"></i></a>
            </div>
        </div>
    </div>
</div>