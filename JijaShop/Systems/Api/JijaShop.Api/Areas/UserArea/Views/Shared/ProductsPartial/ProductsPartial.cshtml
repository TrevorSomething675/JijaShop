@using JijaShop.Api.Data.Models.DTOModels;
@model IEnumerable<ProductDto>

@if (Model != null)
{
    @foreach (var product in Model)
    {
        <div class="col-xxl-3 col-xl-4 col-md-6 col-sm-12 mb-3">
            <div class="product-card p-1">
                <div class="product-card-offer">
                    @if (product.ProductOffers.IsHitOffer)
                    {
                        <div class="offer-hit">Хит</div>
                    }
                    @if (product.ProductOffers.IsNewOffer)
                    {
                        <div class="offer-new">New</div>
                    }
                </div>

                <div class="product-img">
                    <a asp-area="UserArea" asp-controller="Products" asp-action="Product" asp-route-productName="@product.Name">
                        <img src="@product.ProductImage.ImagePath" />
                    </a>
                </div>

                <div class="product-name">
                    <h4>
                        <a href="products.html">@product.Name</a>
                    </h4>
                    
                    @if (product.IsFavorite)
                    {
                        <div>IsFavorite</div>
                    }else{
                        <div>NotFavorite</div>
                    }

                    <p class="product-details-description">@product.ProductDetails.Description</p>
    
                    <div class="d-flex justify-content-between">
                        <div class="product-details-price d-flex justify-content-center py-1">
                            @if (product.ProductDetails.OldPrice != null && product.ProductDetails.OldPrice != 0)
                            {
                                <small class="me-1">@product.ProductDetails.OldPrice$</small>
                            }
                            @product.ProductDetails.Price$
                        </div>
    
                        <div class="product-links">
                            <a href="javascript:void(0);" onclick="addToFavorite('@product.Name')" class="btn btn-outline-secondary add-to-cart"><i class="bi bi-star-fill"></i></a>
                            <a href="#" class="btn btn-outline-secondary add-to-favorites"><i class="bi bi-bag-check-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

<script>
    function addToFavorite(productName) {
        $.post('/UserArea/Favorites/ChangeFavoriteProduct', { productName: productName })
            .done(function (data) {

            })
            .fail(function (error) {

            });
    }
</script>