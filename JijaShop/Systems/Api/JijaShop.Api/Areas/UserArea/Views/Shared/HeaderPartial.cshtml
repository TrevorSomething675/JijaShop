<div class="header-top shadow-lg">
    <div class="container-fluid">
        <div class="row d-flex align-items-center">

            <div class="col-6 col-md">
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <div class="container-fluid">
                        <a asp-area="" asp-controller="" asp-action="" class="header-logo h1">JijaShop</a>
                    </div>
                </nav>
            </div>

            <div class="col-6 col-md">
                <div id="searchInHeader" class="header-search">
                    <form asp-area="UserArea" asp-controller="Products" asp-action="ProductsPartial" method="post">
                        <div class="input-group">
                            <input type="text" class="form-control" name="productName" placeholder="Найти"
                                   aria-label="Searching" aria-describedby="search-button" id="header-search-products" />

                            <button class="btn btn-light" type="submit" id="search-button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>


            <div class="col d-none d-md-block">

                <ul class="list-inline d-flex justify-content-end my-1">
                    <li class="list-inline-item mx-3">
                        <a asp-area="" asp-controller="Auth" asp-action="Login">Войти</a>
                    </li>

                    <li class="list-inline-item mx-3">
                        <a asp-area="" asp-controller="Auth" asp-action="Register">Регистрация</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>

<div class="header-botton">
    <div class="container-fluid bg-dark">
        <div class="row">
            <nav class="col navbar navbar-expand-lg" data-bs-theme="dark">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="offcanvas offcanvas-start" id="offcanvasNavbar" tabindex="-1"
                        aria-labelledby="offcanvasNavbarLable">

                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasLabel">JijaShop</h5>
                            <button class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>

                        <div class="offcanvas-body">
                            <div class="col">
                                <ul class="navbar-nav header-botton-items px-1">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                            <i class="bi bi-house-fill"></i>
                                            <span>Главная</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">
                                            <i class="bi bi-box-seam-fill"></i>
                                            <span>Товары</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="col d-flex align-items-center px-3 py-2">
                <div class="container-fluid d-flex justify-content-end">

                    <ul class="list-inline header-botton-items d-flex my-0">
                        <li class="list-inline-item px-2">
                            <a class="position-relative d-flex justify-content-around" asp-area="" asp-controller="Favorites" asp-action="Index">
                                <i class="bi bi-heart-fill px-1"></i>
                                <span class="d-none d-lg-block">Избраное</span>
                                <span class="badge-warning position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning">2</span>
                            </a>
                        </li>

                        <li class="list-inline-item px-2">
                            @* <a class="position-relative d-flex justify-content-around" data-bs-toggle="offcanvas" href="#BasketСanvasExample" role="button" aria-controls="offcanvasExample"> *@
                            <a class="position-relative d-flex justify-content-around" asp-area="" asp-controller="Cart" asp-action="Index">

                                <i class="bi bi-bag-check-fill px-1"></i>
                                <span class="d-none d-lg-block">Корзина</span>
                                <span class="badge-warning position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning">3</span>
                            </a>
                            @* </a> *@
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>