@using JijaShop.Api.Data.Models.DTOModels;

<div class="row sidebar-products py-2">

	@using (Html.BeginForm("CreateProduct", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		<div class="sidebar-title text-center">
			<span class="sidebar-title-text px-2">Продукт</span>
		</div>

		<div class="sidebar-items">
			<div class="sidebar-item d-flex align-items-center">
  				<label class="mx-1">Имя:</label>
				<input name="ProductDto.Name" class="w-100 my-1" />
			</div>
		</div>

		<div class="sidebar-items">
			<div class="sidebar-item d-flex align-items-center">
				<label class="mx-1">Количество:</label>
				<input name="ProductDto.Quantity" class="w-100 my-1" />
			</div>
		</div>

		<div class="sidebar-title text-center">
			<span class="sidebar-title-text px-2">Цена</span>
		</div>

		<div class="sidebar-items">
			<div class="sidebar-item d-flex align-items-center">
				<label class="mx-1">Актуальная цена:</label>
				<input name="ProductDto.ProductDetailsDto.Price" class="w-100 my-1" />
			</div>
		</div>

		<div class="sidebar-items">
			<div class="sidebar-item d-flex align-items-center">
				<label class="mx-1">Старая цена:</label>
				<input name="ProductDto.ProductDetailsDto.OldPrice" class="w-100 my-1"/>
			</div>
		</div>

		<div class="sidebar-title text-center">
			<span class="sidebar-title-text px-2">Описание</span>
		</div>

		<div class="sidebar-items">
			<div class="sidebar-item d-flex align-items-center">
				<label class="mx-1"></label>
				<textarea type="text" name="ProductDto.ProductDetailsDto.Description" class="w-100 my-1"></textarea>
			</div>
		</div>

		<div class="sidebar-title text-center">
			<span class="sidebar-title-text px-2">Тэги</span>
		</div>

		<div class="sidebar-items d-flex my-1">
			<div>
				<span class="mx-1">
					<input type="checkbox" name="ProductDto.ProductOffersDto.IsHitOffer" value="true"/>
					Хит продаж
				</span>
			</div>
		</div>

		<div class="sidebar-items d-flex my-1">
			<div>
				<span class="mx-1">
					<input type="checkbox" name="ProductDto.ProductOffersDto.IsNewOffer" value="true" />
					Новинка
				</span>
			</div>
		</div>

		<div class="sidebar-title text-center">
			<span class="sidebar-title-text px-2">Изображение</span>
		</div>

		<div class="sidebar-items d-flex my-1">
			<div class="sidebar-item d-flex align-items-center">
				<input type="file" name="ProductDto.ProductImageDto.Image" style="border:none;outline:none;" />
			</div>
		</div>

		<div class="sidebar-items d-flex my-2">
			<input type="submit" value="Добавить продукт" class="w-100 py-1 create-product-button" />
		</div>
	}

