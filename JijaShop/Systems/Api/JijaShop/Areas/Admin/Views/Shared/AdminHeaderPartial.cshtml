<div class="header-top shadow-lg">
    <div class="container-fluid">
        <div class="row d-flex align-items-center">

            <div class="col-6 col-md">
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <div class="container-fluid">
                        <a asp-area="Admin" asp-controller="" asp-action="Index" class="header-logo h1">JijaShop - Admin</a>
                    </div>
                </nav>
            </div>

            <div class="col-6 col-md">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" name="search" placeholder="Найти"
                               aria-label="Searching" aria-describedby="search-button" />

                        <button class="btn btn-light" type="submit" id="search-button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>

            <div class="col d-none d-md-block">
                <ul class="list-inline d-flex justify-content-end my-1">

                    <li class="list-inline-item mx-3">
                        <a asp-area="Admin" asp-controller="Auth" asp-action="Login">Войти</a>
                    </li>

                    <li class="list-inline-item mx-3">
                        <a asp-area="Admin" asp-controller="Auth" asp-action="Register">Регистрация</a>
                    </li>
                     
                </ul>
            </div>

        </div>
    </div>
</div>

