@using JijaShop.Areas.Admin.ViewModels;
@model AdminProductsViewModel
@{
    ViewData["title"] = "Список товаров";
}

<section>
    <div class="container-fluid" style="background-color:#e8e8e8;">
        <div class="row">
            <div class="col-8">
                <h2 class="text-center">Список товаров</h2>

                <div id="ProductsContainer" class="row mx-2">
                    @await Html.PartialAsync("IndexAdminProductsPartial", Model?.Products)
                </div>

                <div class="d-flex justify-content-center pb-3">
                    <button id="GetMoreUsers" class="text-body-download p-2">Загрузить ещё</button>
                </div>
            </div>

            <div class="col-4">
                <div class="row mx-3 px-3">
                    <h2 class=text-center>Скидки</h2>
                    @await Html.PartialAsync("IndexAdminRecentProductsPartial", Model?.Products)
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $('#GetMoreAdminProducts').click(function () {
                $.ajax({
                    url: '@Url.Action("IndexAdminProductsPartial", "Products")',
                    type: 'GET',
                    success: function (result) {
                        $('#ProductsAdminContainer').html(result);
                    },
                    error: function () {
                        alert('Error occurred while refreshing products.');
                    }
                });
            });
        });
    </script>
</section>