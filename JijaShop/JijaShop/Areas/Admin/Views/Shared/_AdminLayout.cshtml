<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JijaShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JijaShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<body>
    <header class="admin-header-background-color">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 border">
                    <nav class="navbar navbar-expand-lg">
                        <div class="container-fluid">
                            <a class="navbar-brand border">Jija Market</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarScroll">
                                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll">
                                    <li class="nav-item border">
                                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Пользователи</a>
                                    </li>
                                    <li class="nav-item border">
                                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Products">Продукты</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="col-lg-4 border d-flex flex-row-reverse">
                    <ul class="nav justify-content-end list-unstyled my-2">
                        <li class="nav-item border">
                            <a class="nav-link" asp-area="Admin" asp-controller="Auth" asp-action="Login">Вход</a>
                        </li>
                        <li class="nav-item border">
                            <a class="nav-link" asp-area="Admin" asp-controller="Auth" asp-action="Register">Регистрация</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - JijaShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>