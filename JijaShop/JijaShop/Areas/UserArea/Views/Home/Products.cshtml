@using JijaShop.Services.Abstractions;
@using JijaShop.Models.ViewModels;
@using JijaShop.Models.DTOModels;
@{
    ViewData["title"] = "Список товаров";
}

<section>
    <div class="container-fluid" style="background-color:#e8e8e8;">
        <div class="row">
            <div class="col-8">
                <div class="row mx-2">
                    <h2>Список товаров</h2>
                    <div id="jija"></div>
                    @*@await Html.PartialAsync("ProductsPartial")*@
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center pb-3">
        <button id="incrementButton" class="text-body-download p-2">Загрузить ещё</button>
    </div>
    <script>
        $(document).ready(function () {
            $("#incrementButton").click(function () {
                $.get("ProductsPartial", function (data) {
                    var target = $('#jija');//Укажите здесь идентификатор элемента, внутри которого должен находиться ваш частичный вид
                    target.empty().html(data);
                });
            });
        });
    </script>
</section>