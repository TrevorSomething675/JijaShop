@using JijaShop.Services.Abstractions;
@using JijaShop.Models.DTOModels;
@using JijaShop.Areas.UserArea.ViewModels;

@model UserProductsViewModel
@{
    ViewData["title"] = "Список товаров";
}

<section>
    <div class="container-fluid" style="background-color:#e8e8e8;">
        <div class="row">
            <div class="col-8">
                <h2 class="text-center">Список товаров</h2>

                <div id="ProductsContainer" class="row mx-2">
                    @await Html.PartialAsync("GetProductsPartial", Model?.products)
                </div>
                
                <div class="d-flex justify-content-center pb-3">
                    <button id="GetMoreUsers" class="text-body-download p-2">Загрузить ещё</button>
                </div>
            </div>

            <div class="col-4">

            </div>
        </div>
    </div>

    <script>
        $(function () {
            $('#GetMoreUsers').click(function () {
                $.ajax({
                    url: '@Url.Action("GetProductsPartial", "Home")',
                    type: 'GET',
                    success: function (result) {
                        $('#ProductsContainer').html(result);
                    },
                    error: function () {
                        alert('Error occurred while refreshing products.');
                    }
                });
            });
        });
    </script>
</section>