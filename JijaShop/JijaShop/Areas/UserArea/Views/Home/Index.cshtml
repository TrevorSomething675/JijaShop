@using JijaShop.Services.Abstractions;
@using JijaShop.Models.DTOModels;
@using JijaShop.Models.Entities;
@using AutoMapper;

@inject IProductService _productService;

<div class="container">
	<div class="row">
		<div class="col-lg-8" style="background-color: #D3D3D3;">
			<div class="row">
				@foreach (var product in await _productService.GetProducts())
				{
					<p>@product.Name</p>
					<p>@product.Quantity</p>
				}
			</div>
		</div>

		<div class="col-lg-4" style="background-color: whitesmoke">
			<div class="row">
				<div class="col-4">
					<p>Jija</p>
				</div>
			</div>
		</div>
	</div>
</div>