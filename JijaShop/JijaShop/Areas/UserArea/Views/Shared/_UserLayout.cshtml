<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JijaShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JijaShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>

<body>
    <header class="user-header-background-color">
        <div class="container-flex">
            <div class="row d-flex">
                <div class="col-lg-2 d-lg-block d-none">
                    <a class="btn-link px-1 d-flex justify-content-center align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="img-fluid header-brand-logo" src="~/Images/jija-brand-logo.png" />
                    </a>
                </div>

                <div class="col text-center">
                    <div class="row h-100">
                        <div class="col col-md-auto d-flex justify-content-center align-items-center">
                            <a class="d-flex" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house mx-1"></i>Главная
                            </a>
                        </div>

                        <div class="col col-md-auto d-flex justify-content-center align-items-center">
                            <a class="d-flex" asp-area="" asp-controller="Home" asp-action="Products">
                                <i class="bi bi-bag mx-1"></i>Товары
                            </a>
                        </div>

                        <div class="col col-md-auto d-flex justify-content-center align-items-center">
                            <a class="d-flex" asp-area="" asp-controller="Home" asp-action="Info">
                                <i class="bi bi-info-square mx-1"></i>О нас
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col col-lg-auto d-flex justify-content-between align-items-center text-center">
                    <div class="col d-flex justify-content-center align-items-center px-4">
                        <a class="btn-link" asp-area="" asp-controller="Auth" asp-action="Login">Войти</a>
                    </div>

                    <div class="col d-flex justify-content-center align-items-center">
                        <a class="btn-link" asp-area="" asp-controller="Auth" asp-action="Register">Регистрация</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - JijaShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>